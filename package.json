{
  "name": "pure-esm-package",
  "description": "A minimum example of a pure ESM package",
  "version": "0.0.0",
  "author": "r4ai",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r4ai/pure-esm-package.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
