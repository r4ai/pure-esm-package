    "check": "bunx @biomejs/biome check --apply .",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.3",
    "@types/bun": "latest",
    "lefthook": "^1.6.10",
    "typescript": "^5.0.0"
  }
}
